<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Simple Airbnb</a>
    <div class="ms-auto flex">
      <button class="btn btn-outline-primary" type="button">
        <i class="fas fa-plus"></i> Add a Flat
      </button>
    </div>
  </div>
</nav>

<div class="container mt-5">
  <h1><%= @flat.name %></h1>
  <p><%= @flat.address %></p>
  <p><%= @flat.description %></p>
  <p>Price per night: <%= @flat.price_per_night %></p>
  <p>Number of guests: <%= @flat.number_of_guests %></p>
  <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-secondary mt-3' %>
  <%= link_to 'Delete', flat_path(@flat), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-danger mt-3' %>
</div>
